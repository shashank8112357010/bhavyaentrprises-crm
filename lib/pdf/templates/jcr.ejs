<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html,
      body {
        font-family: Arial, sans-serif;
        font-size: 9px;
        line-height: 1.3;
        color: #000;
        padding: 20px 30px;
        width: 100%;
      }

      .header {
        margin-bottom: 16px;
        border-bottom: 2px solid #000;
        padding-bottom: 8px;
      }

      .header-content {
        display: flex;
        align-items: flex-start;
        gap: 20px;
      }

      .company-logo {
        width: 72px;
        height: 72px;
        border: 3px solid #2d5016;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #fff;
      }

      .company-logo img {
        width: 56px;
        height: 56px;
        border-radius: 50%;
      }

      .company-info {
        text-align: left;
        flex: 1;
      }

      .company-name {
        font-size: 22px;
        font-weight: 800;
        letter-spacing: 1.5px;
        margin-bottom: 4px;
      }

      .company-details {
        font-size: 9px;
        line-height: 1.4;
      }

      .jcr-info {
        display: flex;
        justify-content: space-between;
        margin-bottom: 16px;
        padding: 8px 10px;
        background-color: #e6e6e6;
        border-top: 4px solid #000;
        font-weight: bold;
      }

      .bill-ship-section {
        display: flex;
        justify-content: space-between;
        margin-bottom: 12px;
      }

      .bill-to {
        width: 100%;
      }

      .section-title {
        font-weight: bold;
        margin-bottom: 3px;
      }

      .items-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 6px;
        font-size: 9px;
      }

      .items-table thead {
        border-bottom: 2px solid #000;
      }

      .items-table th {
        text-align: left;
        padding: 6px 4px;
        font-weight: bold;
        background-color: #fff;
      }

      .items-table td {
        padding: 6px 4px;
        border-bottom: 1px solid #ddd;
        vertical-align: top;
      }

      .items-table td:nth-child(2),
      .items-table td:nth-child(3) {
        text-align: center;
      }

      .item-description {
        text-align: left !important;
        font-size: 9px;
        line-height: 1.3;
      }

      .item-category {
        font-style: italic;
        color: #666;
        font-size: 8px;
        margin-top: 2px;
      }

      .footer-section {
        margin-top: 30px;
        font-size: 9px;
      }

      .terms-title {
        font-weight: bold;
        margin-bottom: 4px;
      }
    </style>
  </head>
  <body>
    <!-- Header Section -->
    <div class="header">
      <div class="header-content">
        <div class="company-logo">
          <img
            src="https://crm.bhavyaentrprises.com/bhavyalogo.png"
            alt="Logo"
          />
        </div>
        <div class="company-info">
          <div class="company-name">BHAVYA ENTERPRISES</div>
          <div class="company-details">
            Regd Office: SCO 393 2nd Floor, Sector 37-D, Chandigarh, 160022<br />
            B.O. : Plot No. 1025, Rani Sati Nagar, Nirman Nagar, Jaipur-302019<br />
            <b>Helpdesk No:</b> +91 9988818489 , +91 9815922428 &nbsp; <br/> <b>GSTIN:</b> 04AXJPV5221C1ZP
            &nbsp; <b>PAN Number:</b> AXJPV5221C<br />
            <b>Email:</b> bhavyaenterpriseschd@gmail.com
          </div>
        </div>
      </div>
    </div>

    <!-- JCR Info -->
    <div class="jcr-info">
      <div>
        <b>JCR No.:</b> <%= jcr && jcr.jcrNo ? jcr.jcrNo : 'PREVIEW' %>
      </div>
      <div>
        <b>Date:</b> <%= jcr && jcr.date ? (new Date(jcr.date)).toLocaleDateString('en-GB') : '' %>
      </div>
    </div>

    <!-- Bill To Section -->
    <div class="bill-ship-section">
      <div class="bill-to">
        <div class="section-title">CUSTOMER: <%= jcr && jcr.client && jcr.client.name ? jcr.client.name : (jcr && jcr.name ? jcr.name : '') %></div>
        <% if (jcr && typeof jcr.client !== 'undefined' && jcr.client) { %>
          <div><b>Contact:</b> <%= jcr.client.contactPerson || '-' %></div>
          <div><b>Email:</b> <%= jcr.client.contactEmail || '-' %></div>
          <div><b>Phone:</b> <%= jcr.client.contactPhone || '-' %></div>
          <% if (jcr.client.gstn) { %>
            <div><b>GSTIN:</b> <%= jcr.client.gstn %></div>
          <% } %>
        <% } else if (jcr && jcr.contactPerson) { %>
          <%# Fallback for older structure if client object not nested %>
          <div><b>Contact:</b> <%= jcr.contactPerson || '-' %></div>
          <div><b>Email:</b> <%= jcr.contactEmail || '-' %></div>
          <div><b>Phone:</b> <%= jcr.contactPhone || '-' %></div>
          <% if (jcr.gstn) { %>
            <div><b>GSTIN:</b> <%= jcr.gstn %></div>
          <% } %>
        <% } %>
      </div>
    </div>

    <!-- Items Table -->
    <table class="items-table">
      <thead>
        <tr>
          <th style="width: 60%">ITEMS</th>
          <th style="width: 20%; text-align: center">QTY.</th>
          
        </tr>
      </thead>
      <tbody>
        <% (jcr && jcr.jcrItems ? jcr.jcrItems : []).forEach((item, index) => { %>
        <tr>
          <td class="item-description">
            <div><b><%= item.description %></b></div>
            <% if(item.category) { %>
              <div class="item-category"><%= item.category %></div>
            <% } %>
          </td>
          <td><%= item.quantity %></td>
      
        </tr>
        <% }) %>
      </tbody>
    </table>

    <!-- Footer Section -->
    <div class="footer-section">
      <div class="terms-title">NOTES</div>
      <div>
        1. This is a Job Completion Report (JCR) for the above items/services.<br />
        2. All information is provided as per actual completion.<br />
        3. For any queries, please contact the office.<br />
      </div>
      <div style="font-style: italic; margin-top: 16px;">
        This is a computer-generated document. No signature or stamp is required.
      </div>
    </div>
  </body>
</html>
