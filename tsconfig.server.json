{
  "extends": "./tsconfig.json",
  "include": ["scripts/**/*.ts", "lib/**/*.ts"],
  "exclude": [
    "node_modules",
    "app",
    "components",
    "pages"
  ],
  "compilerOptions": {
    "outDir": "dist-server",
    "rootDir": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES2020",
    "noEmit": false
  }
}
